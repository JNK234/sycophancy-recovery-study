# Automatically activate virtual environment when entering this directory
# This file is used by direnv (https://direnv.net/)

# Use custom activation since standard venv activation is broken
VENV_PATH="/scratch/wnn7240/venvs/NLP-Independent-Study-venv-clean"

# Update PATH to include venv bin
export PATH="$VENV_PATH/bin:$PATH"

# Set PYTHONPATH to include venv site-packages and project src
export PYTHONPATH="$VENV_PATH/lib/python3.10/site-packages:$PWD/src:$PWD/src/inference:$PYTHONPATH"

# Set VIRTUAL_ENV variable for compatibility
export VIRTUAL_ENV="$VENV_PATH"

# Load environment variables from config/.env if it exists
if [ -f config/.env ]; then
    set -a  # automatically export all variables
    source config/.env
    set +a
fi

# Print confirmation (optional, comment out if too verbose)
echo "✓ Virtual environment activated: NLP-Independent-Study-venv-clean (scratch)"
echo "✓ Python: $(python --version)"
